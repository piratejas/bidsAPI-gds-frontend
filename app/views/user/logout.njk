{% extends "templates/layout.njk" %}

{% block pageTitle %}Logout - {{serviceName}} - {{businessName}}{% endblock %}

{% block beforeContent %}
	{{ super() }}
	<div class="before-content-banner">
		{% include "templates/subnav-auth.njk" %}
	</div>
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<h1 class="govuk-heading-l">You are now signed out</h1>
			<p class="govuk-body">
				<a class="govuk-link" href="/user/login">Sign in to the {{serviceName}} Service</a>
			</p>

		</div>
	</div>
{% endblock %}