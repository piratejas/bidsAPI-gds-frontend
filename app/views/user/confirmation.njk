{% extends "templates/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}New account created - {{serviceName}} - TDSE.UK{% endblock %}

{% block beforeContent %}
    {{ super() }}

    <div class="before-content-banner">
        {% set breadcrumbItems = [
            {
                text: "Home",
                href: "/"
            },
            {
                text: "New account registered"
            }
        ] %}
        {% include "templates/breadcrumbs.njk" %}
        <div class="subnav">
            <ul id="proposition-links" class="govuk-list subnav-auth-links">

                <li>
                    <a class="govuk-link govuk-link--no-visited-state govuk-!-font-size-16 " href="/user/registration">
                        Register
                    </a>
                </li>
                <li>
                    <a class="govuk-link govuk-link--no-visited-state govuk-!-font-size-16 " href="/user/login">
                        Sign in
                    </a>
                </li>

            </ul>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: "New account created"
            }) }}
            <h2 class="govuk-heading-m">What happens next?</h2>
            <p class="govuk-body">You can now <a class="govuk-link" id="sign-in" href="/user/login">sign in</a>.</p>
        </div>
    </div>
{% endblock %}