{% extends "templates/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}New account created - {{serviceName}} - TDSE.UK{% endblock %}

{% set breadcrumbItems = [
	{
		text: "Home",
		href: "/"
	}, {
		text: "New account registered"
	}
] %}

{% block beforeContent %}
	{{ super() }}
	<div class="before-content-banner">
		{% include "templates/breadcrumbs.njk" %}
		{% include "templates/subnav-auth.njk" %}
	</div>
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			{{ govukPanel({
                titleText: "New account created"
            }) }}
			<h2 class="govuk-heading-m">What happens next?</h2>
			<p class="govuk-body">You can now <a class="govuk-link" id="sign-in" href="/user/login">sign in</a>.</p>
		</div>
	</div>
{% endblock %}