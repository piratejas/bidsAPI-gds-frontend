{% block beforeContent %}
	{{ super() }}
	<div class="before-content-banner">
		{% include "templates/breadcrumbs.njk" %}
		{% include "templates/subnav-auth.njk" %}
	</div>
{% endblock %}

{% block content %}
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-one-quarter responsive-nav">
			<div class="side-nav">
				<h2 class="govuk-heading-s govuk-!-margin-bottom-1 govuk-!-margin-top-2" id="nav3">Manage account</h2>
				<ul class="side-nav__component">
					<li class="side-nav__list">
						<a class="side-nav__link" href="/user/profile">Manage profile</a>
					</li>
					<li class="side-nav__list  side-nav__list--selected ">
						<a class="side-nav__link" href="/user/profile/password">Change password</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="govuk-grid-column-two-thirds">
			<div class="govuk-side-nav-content">

				<h1 class="govuk-heading-l">Change password</h1>

				<form action="/user/profile/password" method="POST">
					<div class="govuk-form-group ">
						<label class="govuk-label govuk-!-font-weight-bold govuk-!-padding-bottom-3" for="currentpassword" id="currentpassword-label">Current password</label>

						<input type="password" autocomplete="off" id="currentpassword" name="currentpassword" aria-labelledby="currentpassword-label" class="govuk-input ">
					</div>

					<div>
						<div class="govuk-form-group">
							<label class="govuk-label govuk-!-font-weight-bold" for="password">
								New password
							</label>
							<div class="govuk-hint" id="password-note">
								Your password must be at least 12 characters and contain at least one number, lowercase letter, uppercase letter and special character
							</div>
							<span id="data-field-error-password" class="govuk-error-message">
								<span class="govuk-visually-hidden">Error:</span>
							</span>
							<input type="password" autocomplete="off" id="password" name="password" class="govuk-input " aria-describedby="password-note" aria-required="true">
						</div>
						<div class="govuk-form-group">
							<label class="govuk-label govuk-!-font-weight-bold govuk-!-padding-bottom-3" for="confirmpassword">
								Confirm new password
							</label>
							<input type="password" autocomplete="off" id="confirmpassword" name="confirmpassword" class="govuk-input  " aria-required="true">
						</div>
					</div>

					<button id="submit" class="govuk-button" type="submit">Save password</button>

				</form>

			</div>
		</div>
	</div>
{% endblock %}